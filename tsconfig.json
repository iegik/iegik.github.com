{
  "$schema": "https://schemastore.org/json/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "noEmit": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "es2015",
    "strict": true,
    "typeRoots": ["node_modules/@types", "./types"],
    "allowUnreachableCode": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@assets/*": ["public/*"],
      "*.ts": ["*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/**/*.ts", "**/**/*.tsx"],
  "exclude": [
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/__stories__/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
